@model FibonacciModel;
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1>Verifique se um número pertence à sequência de Fibonacci</h1>

    <form method="post">
        <div class="form-group">
            <label for="numeroInformado" >Informe um número:</label>
            <input type="number" name="numeroInformado" class="form-control" required asp-for="numeroInformado" />
        </div>
        <button class="btn btn-primary w-100 mt-2">Verificar</button>
        <p class="mt-4"> @Model.Resultado</p>
    </form>
</div>
